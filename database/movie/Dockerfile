FROM mongo:latest

ENV MONGO_INITDB_ROOT_USERNAME admin
ENV MONGO_INITDB_ROOT_PASSWORD admin

ENV MONGO_USER_MOVIE mongodb
ENV MONGO_PASSWORD_MOVIE 123456

ENV MONGO_DATABASE_MOVIE movie-db
ENV MONGO_DATABASE_MOVIE_ACTION movie-action-db
ENV MONGO_DATABASE_MOVIE_COMMUNICATION communication-db
ENV MONGO_DATABASE_MOVIE_ACCOUNT account-db

EXPOSE 27017

ADD mongo-init.js /docker-entrypoint-initdb.d/